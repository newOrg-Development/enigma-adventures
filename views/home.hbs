<div
  class="modal fade"
  id="clueModal"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
  data-bs-theme="dark"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="clueModalLabel"></h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body" id="clueModalBody">
        <iframe src="" title="Clue" id="clueIframe" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<form
  id="loginForm"
  action="/signUp"
  method="post"
  class="needs-validation"
  novalidate
>
  <div class="mt-5">

  </div>
  <div id="signUpHidder" style="display:none">
    <div class="mb-3">
      <label for="teamName" class="form-label">Game Number: </label>
      <input
        name="gameNumber"
        type="number"
        class="form-control no-validate"
        id="gameNumber"
        value="0"
      />
    </div>
    <div class="mb-3">
      <label for="teamName" class="form-label">Team Name</label>
      <input
        name="teamName"
        type="text"
        class="form-control no-validate"
        id="teamName"
        data-lpignore="true"
        required
      />
      <div class="invalid-feedback">
        Please enter a team name.
      </div>
    </div>
    <div class="mb-3">
      <label for="teamEmail" class="form-label">Email Address</label>
      <input
        name="email"
        type="email"
        class="form-control"
        id="teamEmail"
        aria-describedby="emailHelp"
        data-lpignore="true"
        required
      />
      <div class="invalid-feedback">
        Please enter a valid email.
      </div>
    </div>
    <div class="form-check mb-4 mt-4" id="sendEmailDiv">
      <input
        class="form-check-input"
        type="checkbox"
        value="false"
        name="emailBool"
        id="eBool"
      />
      <label class="form-check-label" for="eBool">
        Send Email
      </label>
    </div>

  </div>
  <div id="hintHidder">
    <div class="mb-3">
      <label for="gameNumForHint" class="form-label">Game Number</label>
      <input
        type="text"
        class="form-control no-validate"
        id="gameNumForHint"
        value="0"
      />
    </div>
    <div class="mb-3">
      <label for="puzzleNumForHint" class="form-label">Puzzle Number</label>
      <input
        type="text"
        class="form-control no-validate"
        id="puzzleNumForHint"
        aria-describedby=""
        value="1"
      />
    </div>
  </div>
  <div class="d-grid mt-4">
    <button class="btn btn-primary" id="submitData">
      Submit</button>

    <button
      class="btn btn-primary"
      id="signIn"
      style="display:none"
      type="submit"
    >
      Submit</button>
  </div>
</form>
<hr />
<div class="mb-3 mt-4">
  <label for="qrCodeData" class="form-label">Scanner Data</label>
  <select
    class="form-select"
    aria-label="Default select example"
    id="qrCodeData"
  >
    <option value="1">hint</option>
    <option value="2">signUp</option>
    <option value="3">gameEnd</option>
    <option value="4">clue</option>
  </select>
</div>

<div class="d-grid gap-2 mt-2">
  <button class="btn btn-primary" type="button" id="showScanner">Show/Hide
    Scanner</button>
</div>

<div class="mx-auto mt-2" style="width: 80%; display:none" id="scanner"></div>

<div id="magicUrl"></div>

<div id="sessionData">
  {{{sessionData}}}
</div>